{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "lib": ["esnext"],
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "noImplicitThis": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "esModuleInterop": true
  },
  "files": ["src/index.ts"]
}
